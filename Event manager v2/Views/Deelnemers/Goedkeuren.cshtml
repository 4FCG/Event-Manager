@model Event_manager_v2.Models.Deelnemer



@{
    ViewBag.Title = "Goedkeuren";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Goedkeuren</h2>

@using (Html.BeginForm())
{
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.deelnemer_id)
    @Html.HiddenFor(model => model.voornaam)
    @Html.HiddenFor(model => model.achternaam)
    @Html.HiddenFor(model => model.email)
    @Html.HiddenFor(model => model.evenement)

    <div class="form-group">
        @Html.LabelFor(model => model.goedgekeurd, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.goedgekeurd, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.goedgekeurd, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>

}

<div>
    @Html.ActionLink("Terug naar dashboard", "Dashboard", "Evenementen", new { id=Model.evenement}, new { @class="btn btn-default"})
</div>