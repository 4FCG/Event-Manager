@model Event_manager_v2.Models.Wijziging

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <h4>Wijziging verwijderen</h4>
    <p>Dit zorgt er voor dat de volgende wijziging permanent verloren gaat en niet meer wordt uitgevoerd, weet u zeker dat u dit wil doen?</p>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.WijzigingsType)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.WijzigingsType.naam)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.naam)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.naam)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.beschrijving)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.beschrijving)
        </dd>

        <dt>
            DoelType
        </dt>

        <dd>
            @Model.jsonClassType.Substring(24)
        </dd>

    </dl>

    @using (Html.BeginForm()) {

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Terug naar overzicht", "Index", null, new { @class="btn btn-default"})
        </div>
    }
</div>
